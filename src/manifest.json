{
    "name": "FDC3 Agent",
    "version": "0.1.2",
    "description": "FDC3 Desktop Agent implementation.",
    "manifest_version": 2,
    "options_page" : "options.html",
    

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "web_accessible_resources":[
        "api.js"
    ],     
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "storage"
    ],
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "run_at": "document_start",
          "js": ["content.js"]
        }
      ]
  }